<div class="content">

  <h2>Edit Transaction</h2>

<%= @transaction.id %>

  <form action="/transactions/<%= @transaction.id %>" method="post">
    <label for="tr_date">Transaction Date:</label>
    <input type="date" name="tr_date" id="tr_date" value="<%= @transaction.tr_date %>"><br>

<!--  <p> <%= @transaction.merchant.name %> </p>
 <p> <%= @transaction.item.name %> </p>
 <p> <%= @transaction.amount.to_s %> </p> -->
 
    <select name="merchant_id">
      <% @merchants.each do |merchant| %> 
      <% if merchant.id ==  @transaction.merchant.id %>
         <option selected="selected" value="<%= merchant.id %>"><%= merchant.name %></option>
      <% else %>
         <option value="<%= merchant.id %>"><%= merchant.name %></option>
       <% end %>
      <% end %>
    </select>

    <select name="item_id">
      <% @items.each do |item| %> 
      <% if item.id ==  @transaction.item.id %>
         <option selected="selected" value="<%= item.id %>"><%= item.name %></option>
      <% else %>
         <option value="<%= item.id %>"><%= item.name %></option>
       <% end %>
      <% end %>
    </select>


    <label for="amount">Amount: &#163;</label>
    <input type="number" step="any" name="amount" id="merchant_name" value="<%= @transaction.amount %>"><br>



    <input type='submit' value="Update Transaction">
  </form>

<a href="/transactions">Back to Transactions</a> 

</div>





